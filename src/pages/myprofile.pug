extends layouts/page.pug

block title 
    title Photosight - Мой профиль

block content
    include includes/popup.pug
    include includes/add-album.pug
    include includes/edit-album.pug
    main.profile.my-profile 
        .overlay
        .profile-top
            .hero 
                .dots-menu
                        .dots-wrap
                            a(href="#").dots-option.settings Настройки
                            a(href="#").dots-option.add-photo Добавить фото
                .container.flex
                    .flex
                        div(style="background: url(./img/profile/avatar.jpg) center / cover").hero-avatar
                    .hero-wrap
                        .flex 
                            .hero-description
                                h3.hero-name Дмитрий Зеленский
                                p.hero-location Россия, Ставрополь,
                                    span.hero-last-visited  был 18 декабря, 16:56
                                    span(style="display: none;").hero-online онлайн
                            .hero-contacts
                                a(href="#").hero-contact-link
                                    i.fab.fa-facebook
                                a(href="#").hero-contact-link
                                    i.fab.fa-vk
                                a(href="#").hero-contact-link.phone
                                    i.fas.fa-phone
                                    span +7 (903) 567-45-67
                                a(href="#").hero-contact-link
                                    i.fab.fa-flickr
                                a(href="#").hero-contact-link
                                    i.fab.fa-500px
                                a(href="#").hero-contact-link
                                    i.fab.fa-behance
                        .hero-about 
                            p i am a hobbyphotographer from passion...versatile and creative ...i make all myself Self portraits i am a hobbyphotographer from passion...versatile and creative ...i make all myself Self portraits

            .nav
                .info
                    .info-container
                        .swiper-wrapper
