                                p.text написано<br>комментариев
                                p.data.written 110
                            .info-block.swiper-slide
                                p.text подписано<br>пользователей
                                p.data.subscribers 36
                            .info-block.swiper-slide
                                p.text избранных<br>авторов
                                p.data.authors 5
                            .info-block.swiper-slide
                                p.text оценённых<br>фотографий
                                p.data.rated 113
                            .info-block.swiper-slide
                                p.text просмотров<br>фотографий
                                p.data.viewed 91 156

                .nav-actions
                    a.nav-btn.nav-info
                        i.fas.fa-info
                    //- a(href="#").nav-btn.add-photo Загрузить фото
                    //- a.nav-btn.album-popup Создать альбом
                    a.nav-btn.edit-album-popup Редактировать альбом
                    a.nav-btn.nav-more
                        i.fas.fa-ellipsis-h
                    

                include includes/nav-tabs.pug
