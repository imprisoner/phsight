                            // setting autocomplete
                            window.addEventListener('load', function(e) {
                                const countryID = $("#PersonalFormModel_country_id").val()
                                const options = {
                                    url: function (phrase) {
                                        if (phrase !== "") {
                                            return `https://photosight.ru/ajax/citySuggest?term=${phrase}&country_id=${countryID}`;
                                        } else {
                                            return
                                        }
                                    },
                                    getValue: "value",
                                    ajaxSettings: {
                                        method: 'GET',
                                        dataType: 'json',
                                        success: function (data) {
                                            console.log(data)
                                        },
                                        error: function(err) {
                                            console.log('error', err)
                                        }

                                    },
                                    list: {
                                        match: {
                                            enabled: true
                                        },

                                        onClickEvent: function (a, b) {
                                            $("#PersonalFormModel_city").getSelectedItemData().val()
                                        }
                                    }
                                };
                                $("#PersonalFormModel_city").on('keydown', function (e) {
                                    if ($('.easy-autocomplete-container ul').children().length > 0) $('.easy-autocomplete-container').show()
                                })
                                $("#PersonalFormModel_city").easyAutocomplete(options);
                            })


