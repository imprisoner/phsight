.settings-general.general
            form(method="post" action="http://localhost:80/test.php").container
                section.general-avatar
                    .row
                        .col-lg-2
                            .general-avatar-preview
                                i.far.fa-camera
                            .general-avatar-upload
                                i.far.fa-upload 
                                p загрузить аватар
                section.general-personal.personal
                    .row

                        .col-lg-3.col-md-6.col-xs-12
                            .personal-textfield
                                p.subheader Электронная почта
                                input(type="email" id="email" name="email")
                        .col-lg-3.col-md-6.col-xs-12
                            .personal-textfield
                                p.subheader  Ваше имя на сайте
                                input(type="text" id="name" name="name")

                    .row
                        .col-lg-3.col-md-6.col-xs-12
                            .personal-textfield
                                p.subheader Пол
                                label.select
                                    span 
                                    input(type="text" id="gender" name="gender").selection
                                    .datalist
                                        div(data-value="male").option мужской
                                        div(data-value="female").option женский
                        .col-lg-3.col-md-6.col-xs-12
                            .personal-textfield
                                p.subheader Дата рождения
                                label(for="date") 
                                    input(type="date" id="date" name="date")
                    .row
                        .col-lg-3.col-md-6.col-xs-12
                            .personal-textfield
                                p.subheader Страна
                                label.select
                                    span 
                                    input(type="text" id="country" name="country" placeholder="страна не выбрана").selection
                                    .datalist 
                                        div(data-value="11111").option Казахстан
                                        div(data-value="22222").option Россия
                                        div(data-value="33333").option Беларусь
                        .col-lg-3.col-md-6.col-xs-12
                            .personal-textfield
                                p.subheader Город
                                input(type="text" id="city" name="city")

                    .row
                        .col-lg-6.col-xs-12
                            .personal-textfield 
                                p.subheader Расскажите о себе
                                textarea(name="about")


                section.general-contacts.contacts

                    .row 
                        .col-lg-6.col-xs-12
                            h4.contacts-title Контакты
                            .contacts-fields

                                .contacts-item
                                    .contacts-select
                                        label.select
                                            span Behance
                                            input(type="text").selection
                                            .datalist
                                                div(data-value="be").option Behance
                                                div(data-value="tw").option Twitter
                                                div(data-value="tg").option Telegram
                                                div(data-value="500px").option 500px
                                                div(data-value="fl").option Flickr
                                                div(data-value="fb").option Facebook
                                    .contacts-textfield
                                        input(type="text" name="behance" value="http://behance.com/").link 
                                        .contacts-delete.delete-button
                                            i.fas.fa-times


                                .contacts-item
                                    .contacts-select
                                        label.select
                                            span 500px
                                            input(type="text").selection
                                            .datalist 
                                                div(data-value="be").option Behance
                                                div(data-value="tw").option Twitter
                                                div(data-value="tg").option Telegram
                                                div(data-value="500px").option 500px
                                                div(data-value="fl").option Flickr
                                                div(data-value="fb").option Facebook
                                    .contacts-textfield
                                        input(type="text" name="500px" value="http://500px.com/").link
                                        .contacts-delete.delete-button
                                            i.fas.fa-times


                                .contacts-item
                                    .contacts-select
                                        label.select
                                            span Twitter
                                            input(type="text").selection
                                            .datalist 
                                                div(data-value="be").option Behance
                                                div(data-value="tw").option Twitter
                                                div(data-value="tg").option Telegram
                                                div(data-value="500px").option 500px
                                                div(data-value="fl").option Flickr
                                                div(data-value="fb").option Facebook
                                    .contacts-textfield
                                        input(type="text" name="twitter" value="http://twitter.com").link
                                        .contacts-delete.delete-button
                                            i.fas.fa-times

                    .row
                        .col-lg-6.col-xs-12
                            button.contacts-add-contact Добавить контакт

                section.general-submit.submit
                    .container
                        button(type="submit").submit-button Сохранить изменения